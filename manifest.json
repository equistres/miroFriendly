{
    "name": "MiroFriendly",
    "version": "1.00",
    "description": "¡Entérate Las Últimas noticias en tu escritorio!",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "permissions": [
        "notifications",
        "<all_urls>",
        "background",
        "tabs"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Ultimas Noticias lanacion.com",
        "default_icon": "img/icon.png",
        "default_popup": "index.html"
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "img/icon.png"
    ]
}